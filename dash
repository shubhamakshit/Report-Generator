<body>

    <div id="toolbar">
        <div class="toolbar-group">
            <button class="btn-icon" id="prev" title="Previous Page"><i class="bi bi-chevron-left"></i></button>
            <span id="page-info">
                <span id="page-num">--</span> / <span id="page-count">--</span>
            </span>
            <button class="btn-icon" id="next" title="Next Page"><i class="bi bi-chevron-right"></i></button>
        </div>
        
        <div class="toolbar-group">
             <span style="font-size: 0.9rem; font-weight: 500; max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{ pdf_title }}</span>
        </div>

        <div class="toolbar-group">
            <button class="btn-icon" id="zoom-out" title="Zoom Out"><i class="bi bi-dash-lg"></i></button>
            <span id="zoom-level" style="font-size: 0.9rem; min-width: 50px; text-align: center;">100%</span>
            <button class="btn-icon" id="zoom-in" title="Zoom In"><i class="bi bi-plus-lg"></i></button>
            <a href="{{ pdf_url }}" download class="btn-icon" title="Download"><i class="bi bi-download"></i></a>
        </div>
    </div>

    <div id="loader">
        <div class="spinner"></div>
        <div>Loading PDF...</div>
    </div>

    <div id="pdf-container"></div>

    <script>
        // PDF.js configuration
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';

        const url = "{{ pdf_url }}";
        let pdfDoc = null;
        let pageNum = 1;
        let pageRendering = false;
        let pageNumPending = null;
        let scale = 1.0; // Default zoom
        const container = document.getElementById('pdf-container');
        const loader = document.getElementById('loader');
        const zoomStep = 0.25;

        // --- Render Page ---
        async function renderPage(num) {
            pageRendering = true;
            
            // Fetch page
            const page = await pdfDoc.getPage(num);
            
            // Calculate scale to fit width if initial load (and we want fit-width)
            // For now, we stick to the 'scale' variable
            
            const viewport = page.getViewport({ scale: scale });
            
            // Create or reuse canvas
            // Note: For simple viewer, we can clear container and add new canvas
            // Or keep all pages rendered. For performance on large PDFs, single page view is better.
            // Let's implement "Single Page View" for now as it's lighter.
            
            container.innerHTML = ''; 
            const canvas = document.createElement('canvas');
            canvas.className = 'pdf-page';
            container.appendChild(canvas);
            
            const ctx = canvas.getContext('2d');
            canvas.height = viewport.height;
            canvas.width = viewport.width;

            // Render
            const renderContext = {
                canvasContext: ctx,
                viewport: viewport
            };
            
            try {
                await page.render(renderContext).promise;
            } catch(err) {
                // Cancelled or error
                console.error(err);
            }

            pageRendering = false;
            
            // Update Stats
            document.getElementById('page-num').textContent = num;
            document.getElementById('page-count').textContent = pdfDoc.numPages;
            document.getElementById('zoom-level').textContent = Math.round(scale * 100) + '%';
            
            // Manage Buttons
            document.getElementById('prev').disabled = num <= 1;
            document.getElementById('next').disabled = num >= pdfDoc.numPages;

            if (pageNumPending !== null) {
                renderPage(pageNumPending);
                pageNumPending = null;
            }
        }

        // --- Queue Render ---
        function queueRenderPage(num) {
            if (pageRendering) {
                pageNumPending = num;
            } else {
                renderPage(num);
            }
        }

        // --- Navigation ---
        function onPrevPage() {
            if (pageNum <= 1) return;
            pageNum--;
            queueRenderPage(pageNum);
        }

        function onNextPage() {
            if (pageNum >= pdfDoc.numPages) return;
            pageNum++;
            queueRenderPage(pageNum);
        }

        // --- Zoom ---
        function onZoomIn() {
            scale += zoomStep;
            queueRenderPage(pageNum);
        }

        function onZoomOut() {
            if (scale <= 0.5) return;
            scale -= zoomStep;
            queueRenderPage(pageNum);
        }

        // --- Event Listeners ---
        document.getElementById('prev').addEventListener('click', onPrevPage);
        document.getElementById('next').addEventListener('click', onNextPage);
        document.getElementById('zoom-in').addEventListener('click', onZoomIn);
        document.getElementById('zoom-out').addEventListener('click', onZoomOut);
        
        // Keyboard Nav
        document.addEventListener('keydown', (e) => {
            if(e.key === 'ArrowLeft') onPrevPage();
            if(e.key === 'ArrowRight') onNextPage();
        });

        // --- Load PDF ---
        (async function() {
            try {
                const loadingTask = pdfjsLib.getDocument(url);
                pdfDoc = await loadingTask.promise;
                
                loader.style.display = 'none';
                document.getElementById('page-count').textContent = pdfDoc.numPages;
                
                // Initial render
                renderPage(pageNum);
            } catch (err) {
                console.error('Error loading PDF: ', err);
                loader.innerHTML = `<div class="text-danger"><i class="bi bi-exclamation-triangle"></i> Error loading PDF</div>`;
            }
        })();
    </script>
</body>
</html>